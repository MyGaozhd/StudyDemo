<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:studyview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.gaozhd.studydemo.androidbase.widget.studyview.StudyView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        studyview:studyview_backColor="#ff0000" />

    <com.gaozhd.studydemo.androidbase.widget.studyview.StudyViewGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffaa00">

        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="btn1" />

        <Button
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="btn2" />

        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="btn3" />
    </com.gaozhd.studydemo.androidbase.widget.studyview.StudyViewGroup>

</LinearLayout>